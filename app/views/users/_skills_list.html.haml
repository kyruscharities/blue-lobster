- skills.each do |skill, value, normalized_value|
  .progress
    .progress-bar.progress-bar-success{'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => '40', :role => 'progressbar', :style => "width: #{normalized_value}%"}
      .text-left
        %span{style: 'margin-left: 5px'} #{skill.name} : #{value}