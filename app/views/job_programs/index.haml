.container-fluid
    .row
        .col-xs-1
            %strong
                ID
        .col-xs-4
            %strong
                Company Name
        .col-xs-4
            %strong
                Description
        .col-xs-1
            %strong
                Types
        .col-xs-1
            %strong
                Skills
    -@job_programs.each do |program|
        .row
            .col-xs-1 #{program.id}
            .col-xs-4 #{program.name}
            .col-xs-4 #{program.description}
            .col-xs-1 #{@job_types_by_id[program.id].size}
            .col-xs-1
                -@job_skills_by_id[program.id].each do |job|
                    #{job.name}