- collection.each do |resource|
  .row
    .col-xs-6
      - resource.attributes.each do |attribute|
        %p #{attribute[0]}: #{attribute[1]}
    .col-xs-4
      - resource.skills.each do |skill|
        %p #{skill.name}
    .col-xs-2
      = link_to 'Edit', send("edit_#{resource.class.name.underscore}_path", resource)
      = link_to 'Delete', send("#{resource.class.name.underscore}_path", resource), method: 'delete'
