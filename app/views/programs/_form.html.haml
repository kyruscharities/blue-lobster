= simple_form_for(resource) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :published

    - types = resource.job_types + (JobType.all.order(:name).except {|j| resource.job_types.include? j}
    = f.association :job_types, collection: types, as: :check_boxes

  .form-actions
    = f.button :submit